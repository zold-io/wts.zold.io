!!! 5
%html
  %head
    %title
      =title
    %meta{charset:'UTF-8'}
    %meta{name:'viewport', content:'width=device-width, initial-scale=1.0'}
    %meta{name:'keywords', content:'Zold, Cryptocurrency, Payments, Online Payments'}
    %meta{name:'description', content:'Zold Web Wallets'}
    %link{type:'text/css', href:url('css/main.css'), rel:'stylesheet'}
    %link{rel:'shortcut icon', href:'https://www.zold.io/images/logo.png'}
    %link{href: 'https://cdn.rawgit.com/yegor256/tacit/gh-pages/tacit-css-1.2.9.min.css', rel: 'stylesheet'}
  %body
    %section
      %header
        %nav
          %ul
            %li
              %a{href: '/'}
                %img.logo{src: 'https://www.zold.io/images/logo.svg'}
        %nav
          %ul
            %li
              Zold Web Wallets
        %nav
          %ul
            %li
              - if defined? guser
                %a{href: '/home'}
                  = "@#{guser[:login]}"
              - else
                %a{href: login_link}
                  Login
            %li
              Wallets:
              = wallets.all.count
            %li
              Remotes:
              = remotes.all.count
            - if defined? guser
              %li
                %a{href: '/logout'}
                  Logout
      %article
        = yield
      %footer
        %nav
          %ul
            %li
              =ver
